<!DOCTYPE html>
<html>
<head>
    <script>document.documentElement.className += 'no-fouc'</script>
    <meta charset="utf-8" />
    <title>@Html.Raw(this.ViewBag.Title as string)</title>
    <base href="@Url.Content("~/")">
    <link rel="icon" href="@Url.Content("~/img/suplex-logo.png")" />


    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://kendo.cdn.telerik.com/2018.2.516/styles/kendo.common.min.css" rel="stylesheet" type="text/css" />
    <link href="https://kendo.cdn.telerik.com/2018.2.516/styles/kendo.metro.min.css" rel="stylesheet" type="text/css" />

    <script src="https://kendo.cdn.telerik.com/2018.2.516/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2018.2.516/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2018.2.516/js/kendo.aspnetmvc.min.js"></script>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    @*<link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">*@
    <link href="~/css/reset.min.css" rel="stylesheet" />
    <link href="~/css/layout.min.css" rel="stylesheet" />
    @RenderSection("Styles", false)
</head>
<body>
    <div id="s-wrapper">
        <div id="s-header">
            <div class="s-nav">
                <div class="s-nav-brand">
                    <a href="/">Suplex</a><span>&nbsp;&#8208;&nbsp;@ViewBag.Title</span>
                </div>
                <div class="s-nav-menu">
                    <a class="s-nav-menu-hamburger s-js-nav-hamburger" href="#"><i class="fa fa-bars"></i></a>
                </div>
            </div>
        </div>
        <div id="s-content">
            @RenderBody()
        </div>
        <div id="s-footer"></div>
    </div>
    <div class="s-nav-menu-inner">
        <ul class="s-nav-menu-list">
            @foreach( var menuItem in Suplex.UI.WebApplication.Menu.Items )
            {
                <li>
                    <a href="@menuItem.Url">
                        @menuItem.Name
                    </a>
                </li>
            }
        </ul>
    </div>
    <script src="~/js/webapp.min.js"></script>
    <script src="~/js/jquery.ba-throttle-debounce.min.js"></script>

    @RenderSection( "Scripts", false )
</body>
</html>
